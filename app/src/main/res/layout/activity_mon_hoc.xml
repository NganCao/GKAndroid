<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MonHocActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarMonHoc"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="Môn học"
        android:background="#4CAF50"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"></android.support.v7.widget.Toolbar>

    <LinearLayout
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingLeft="5dp"
            android:gravity="center_vertical"
            android:textColor="#000"
            android:textSize="18sp"
            android:text="Mã môn học"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/edittextMaMH"
            android:textSize="18sp"
            android:textColor="#000"
            android:hint="Nhập mã môn học"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingLeft="5dp"
            android:gravity="center_vertical"
            android:textColor="#000"
            android:textSize="18sp"
            android:text="Tên môn học"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/edittextTenMH"
            android:textSize="18sp"
            android:textColor="#000"
            android:hint="Nhập tên môn học"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingLeft="5dp"
            android:gravity="center_vertical"
            android:textColor="#000"
            android:textSize="18sp"
            android:text="Học kỳ"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/edittextHocKyMH"
            android:inputType="number"
            android:textSize="18sp"
            android:textColor="#000"
            android:hint="Nhập học kỳ"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"></LinearLayout>
        <Button
            android:id="@+id/buttonNhapMH"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="2"
            android:text="Nhập"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:weightSum="10"
        android:background="#4CAF50"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_weight="9"
            android:gravity="center_vertical"
            android:paddingLeft="6dp"
            android:textSize="20sp"
            android:text="Danh sách môn học"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageButton
            android:src="@drawable/btndelete"
            android:id="@+id/imagebuttonXoaMH"
            android:layout_gravity="right"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>

    <ListView
        android:id="@+id/listviewMonHoc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
</LinearLayout>